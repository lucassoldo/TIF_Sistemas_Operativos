# config.env - Parámetros editables sin tocar el código
# --- Backup ---
# Directorio a respaldar (CAMBIAR por un directorio real, p.ej. /home/usuario/Documentos/proyecto)
BACKUP_SOURCE_DIR="Desktop/Nueva carpeta"   # <= cambiá esta ruta para tu demo
# Carpeta donde se guardan los .tar.gz
BACKUP_DEST_DIR="./backups"
# Días de retención de backups
BACKUP_RETENTION_DAYS=7

# --- Logs ---
LOG_DIR="./logs"

# --- Limpieza ---
# Limpiar caché de usuario (~/.cache)
CLEAN_USER_CACHE=true
# Limpiar caché de apt (requiere sudo en Debian/Ubuntu). Poné true si estás en una VM Ubuntu.
CLEAN_APT_CACHE=false
# Compactar logs del sistema (sudo + systemd)
CLEAN_JOURNAL=false
